<header class="fondoeditorruta d-flex"> 
<div class="col-md-4 mx-auto">
       <div class="card text-center">
    <div class="card-header" >
          <h3>Editar Hoja de Ruta</h3>
        </div>
        </div>
    <div class="card">
        <div class="card-body">
            <form action="/rutas/edit/{{ruta.id_ruta}}" method="POST">

                <div class="form-group">
                    <input type="date" name="fecha" class="form-control" placeholder="Fecha" value="{{ruta.fecha}}" autofocus>
                </div> 


       
                
                <div class="form-group">
                    <input type="int" name="id_furgo" class="form-control" placeholder="Furgoneta" value="{{ruta.id_furgo}}">
                </div>
                <div class="form-group">
                    <input type="text" name="origen" class="form-control" placeholder="Origen" value="{{ruta.origen}}">
                </div>
                <div class="form-group">
                    <input type="text" name="destino" class="form-control" placeholder="Destino" value="{{ruta.destino}}">
                </div>
               {{#if ruta.dietas}}
                <div class="form-group">
                    <input type="text" name="dietas" class="form-control" placeholder="Dietas" value="SI">
                {{else}}
                <div class="form-group">
                    <input type="text" name="dietas" class="form-control" placeholder="Dietas" value="NO">
                {{/if}}

                </div>
                {{#if ruta.festivo}}
                <div class="form-group">
                    <input type="text" name="festivo" class="form-control" placeholder="Festivo" value="SI">
                {{else}}
                <div class="form-group">
                
                    <input type="int" name="kilometros" class="form-control" placeholder="Kilometros" value="{{ruta.kilometros}}">
                </div>
                <div class="form-group">
                    <textarea name="incidebncias" rows="2" class="form-control" placeholder="Incidencias">{{ruta.incidencias}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
<!-- botÃ³n de retorno -->
<p></p>
          <div class="ui buttons" onclick="history.back()" style="text-align:center">
          <button class="btn btn"  >
         Volver atrÃ¡s 
          </button>
          </div>

</div>
</header>
